rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to profile pictures
    match /profile_pictures/{imageId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to registrations
    match /registrations/{fileId} {
      allow read, write: if true;
    }
    
    // Default rule - deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 